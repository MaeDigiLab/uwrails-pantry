<div class="row">
  <div class="column grid_6">
    <h2>Foods Controller - GET: Index</h2>
  </div>
  <div class="column grid_6">
    <ul>
      <li>Hello, <%= @user.screen_name %>!</li>
      <li><%= link_to "Log-out", { :controller => :login, :action => :destroy } %></li>
    </ul>
  </div>
</div>  

<div class="row">
<div class="column grid_12">
<ul>
  <li><%= link_to "View My Recipes", :controller => :recipes, :action => :index %></li>
  <% if @scoped %>
  <li><%= link_to "View Only My Foods", :controller => :foods, :action => :index %></li>
  <% else %>
  <li>View My Foods</li>
  <% end %>

  <ul>
    <li><%= link_to "Create New Food", :controller => :foods, :action => :new %></li>
  </ul>
</ul>




<%= render( "shared/alpha_nav_list", :counts => @food_counts ) %>

<table>
<thead>
<tr>
  <td>Food Name</td>
  <td>Serving Size</td>
</tr>
</thead>
<tbody>
  
<% @list.each do |item| -%>
    <tr>
      <td><%= item.food_name %></td>
      <td><%= item.serving %></td>
    </tr>
<% end -%>

  </tbody>
</table>
</div>
</div>